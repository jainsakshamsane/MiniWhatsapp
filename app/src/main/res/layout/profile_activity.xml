<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/back"
                android:layout_gravity="center"
                android:src="@drawable/back_wp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="#7F4C8F"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginLeft="110dp"
                android:gravity="center"
                android:text="Profile" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:id="@+id/profileimage"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:src="@drawable/profilepp"-->
<!--                android:layout_marginEnd="26dp"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_width="4dp"
                android:layout_centerInParent="true"
                android:src="@drawable/profilepp"
                android:id="@+id/profileimage"
                app:civ_border_color="#FF000000"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/editimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="220dp"
            android:src="@drawable/cameraaaa" />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear02"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/namee"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginEnd="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/editname"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="300dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit_e"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/phonee"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:textColor="#000"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/editphone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="340dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit_e"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear3"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emailimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/emaill"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Id"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:textColor="#000"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/editemail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="380dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit_e"
            android:layout_marginEnd="16dp"/>

    </RelativeLayout>
</ScrollView>
