<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Border -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#FF00FF00" />
        </shape>
    </item>
    <!-- Inner Border -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape
            android:shape="oval">
            <solid android:color="#FF00FF00" />
        </shape>
    </item>
    <!-- CircleImageView Content -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <bitmap
            android:src="@drawable/profilepp"
            android:gravity="center" />
    </item>
</layer-list>
